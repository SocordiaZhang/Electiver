<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.electiveassistant.ElectiveAssistantFragment">

    <LinearLayout
        android:id="@+id/assistant_searchOnCate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="4dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="按类别搜索"
            android:textSize="15sp"/>
        <Spinner
            android:id="@+id/spin_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:layout_marginLeft="10dp"
            android:entries="@array/courseCategory"/>
        <Spinner
            android:id="@+id/spin_coursedepart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:entries="@array/courseDepartment"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/assistant_searchOnName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/assistant_searchOnCate">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="按名称搜索"
            android:textSize="15sp"/>
        <EditText
            android:id="@+id/search_on_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:hint="支持模糊搜索"/>
        <Button
            android:id="@+id/assis_search"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="@string/start_search"
            android:layout_marginLeft="100dp"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/assistant_recommend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="4dp"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/assistant_searchOnName">

        <Spinner
            android:id="@+id/spin_rec_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:layout_marginLeft="10dp"
            android:entries="@array/courseCategory2"/>
        <EditText
            android:id="@+id/recommend_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:inputType="number"
            android:hint="推荐课程数量"/>
        <Button
            android:id="@+id/assis_search_end"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="@string/end_search"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/assistant_scrollList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/assistant_recommend"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ListView
                android:id="@+id/swipe_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ListView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>